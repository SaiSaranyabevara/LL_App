<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/flashcard_root" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="@drawable/rounded_card_background" android:padding="20dp" android:elevation="8dp">
    <!--  Close Button  -->
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
        <ImageView android:id="@+id/close_button" android:layout_width="24dp" android:layout_height="24dp" android:layout_alignParentEnd="true" android:src="@drawable/ic_close" android:contentDescription="Close" android:padding="4dp"/>
    </RelativeLayout>
    <!--  Word Title  -->
    <TextView android:id="@+id/word_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Word" android:textSize="24sp" android:textStyle="bold" android:textColor="#000000" android:layout_gravity="center"/>
    <!--  Phonetic  -->
    <TextView android:id="@+id/word_phonetic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Phonetic" android:textSize="16sp" android:textColor="#444444" android:layout_marginTop="4dp" android:layout_gravity="center"/>
    <!--  Audio Icon  -->
    <ImageView android:id="@+id/audio_button" android:layout_width="32dp" android:layout_height="32dp" android:layout_gravity="center" android:layout_marginTop="8dp" android:src="@drawable/ic_volume" android:contentDescription="Play Audio"/>
    <!--  Definition  -->
    <TextView android:id="@+id/word_definition" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Definition" android:textSize="16sp" android:textColor="#444444" android:layout_marginTop="12dp"/>
    <!--  Example  -->
    <TextView android:id="@+id/word_example" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Example" android:textSize="16sp" android:textColor="#444444" android:layout_marginTop="8dp"/>
    <!--  Usage  -->
    <TextView android:id="@+id/word_usage" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Usage" android:textSize="16sp" android:textColor="#444444" android:layout_marginTop="8dp"/>
</LinearLayout>