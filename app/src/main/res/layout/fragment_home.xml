<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/backgroundLight">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            >

            <!-- Welcome Message -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to LearnEasy"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="4dp"
                 />

            <!-- Motivational Line -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keep Learning and Keep Shining Buddy"
                android:textSize="15sp"
                android:textColor="@color/textSecondary"
                android:layout_marginBottom="50dp"
                />

            <!-- Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Levels to Learn LSRW..."
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="20dp"
               />

            <!-- Basic Button -->
            <Button
                android:id="@+id/btn_basic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic Level"
                android:drawableRight="@drawable/arrow_right"
                android:textSize="20dp"
                android:background="@drawable/rounded_card_background"
                android:textColor="@color/textOnPrimary"
                android:layout_marginBottom="20dp" />

            <!-- Intermediate Button -->
            <Button
                android:id="@+id/btn_intermediate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intermediate Level"
                android:drawableRight="@drawable/arrow_right"
                android:textSize="20dp"
                android:background="@drawable/rounded_card_background"
                android:textColor="@color/textOnPrimary"
                android:layout_marginBottom="20dp" />

            <!-- Advanced Button -->
            <Button
                android:id="@+id/btn_advanced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advanced Level"
                android:textSize="20dp"
                android:drawableEnd="@drawable/arrow_right"
                android:background="@drawable/rounded_card_background"
                android:textColor="@color/textOnPrimary" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
